#!/usr/bin/env bash

echo "Installing Sentry-CLI"
# Install Sentry CLI
cd $1

curl -O -s https://downloads.sentry-cdn.com/sentry-cli/1.47.1/sentry-cli-Linux-x86_64
tar -C vendor/sentry-cli -xzf sentry-cli-Linux-x86_64
rm sentry-cli-Linux-x86_64

# creating env variables
echo "Creating environment variables."
mkdir -p $1/.profile.d
cd $1/.profile.d
cat <<EOF > sentry-cli.sh
export PATH="/app/vendor/sentry-cli:\$PATH"
export PYTHONPATH="/app/:/app/vendor/sentry-cli/sentry-cli-Linux-x86_64"
EOF

echo "Done <-----"
exit 0

echo "Buildpack installed."
