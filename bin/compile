#!/usr/bin/env bash

echo "Installing Sentry-CLI"
# Install Sentry CLI
cd $1

curl -O -s https://github.com/getsentry/sentry-cli/releases/download/1.47.1/sentry-cli-Linux-x86_64
mkdir -p vendor/sentry-cli
mv sentry-cli-Linux-x86_64 vendor/sentry-cli
# tar -C vendor/sentry-cli -xzf opencv-3.2.0.tar.gz
# rm opencv-3.2.0.tar.gz

# creating env variables
# echo "Creating environment variables."
# mkdir -p $1/.profile.d
# cd $1/.profile.d
# cat <<EOF > Python-OpenCV.sh
# export PATH="/app/vendor/opencv:\$PATH"
# export PYTHONPATH="/app/:/app/vendor/opencv/opencv-3.2.0"
# EOF

echo "Done <-----"
exit 0

echo "Buildpack installed."